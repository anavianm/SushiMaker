<!doctype html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="utf-8">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <style type="text/css">

      body {
        margin: 0;
        font-family: Arial;
        font-size: 17px;
      }

      .bodyContent{
        padding:0.5%;
      }

      #myVideo {
        position: fixed;
        right: 0;
        bottom: 0;
        max-width: 100%;
        height: auto; 
      }

      .row1{
		height: auto;
		margin-top: 20px;
		padding-top: 40px;
		padding: 20px;
		display: flex;
		flex-wrap: wrap;
		width: 100%;
		position: relative;
		display: flex;
		justify-content: space-between;

	}

	.card {
		height: auto;
		margin-top: 20px;
		margin-bottom: 10px;
		float: left;
		box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
		transition: 0.3s;
		background: rgba(248, 246, 229 , 0.4 );
    	flex: 0 1 calc(25% - 1em);
	}

	.card:hover {
		box-shadow: 0 8px 16px 0 rgba(0,0,0,0.9);
	}

	.container {
		padding: 2px 16px;
	}

	.front{
		height: auto;
	}
	@media screen and (min-width: 20em) {
		.row1 {
			display: flex;
			flex-wrap: wrap;
			justify-content: space-between;
		}

		.card {
			flex: 0 1 calc(100% - 3em);
		}
	}

	@media screen and (min-width: 40em) {
		.row1 {
			display: flex;
			flex-wrap: wrap;
			justify-content: space-between;
		}

		.card {
			flex: 0 1 calc(50% - 1em);
		}
	}

	@media screen and (min-width: 60em) {

		.card {
			flex: 0 1 calc(30% - 1em);
		}
	}

	</style>
	</head>
	<body>

	<video autoplay muted loop id="myVideo">
      <source src="food.mp4" type="video/mp4">
      Your browser does not support HTML5 video.
    </video>

    <script>

    var divs = "";

	for( var i = 0; i < data.length;++i) {

	  divs += "<div class='card'>"
				+ "<img id="recipeImg" src="transparent.png" style="width:100%" alt="">"
				+ "<p id="recipeName"</p>" 
				+ "</div>";
	}
	$("p").append(divs);

	function display(data) {
	    console.log(data);
	    document.getElementById("page").style.visibility = 'visible';

	    // Store data - Name 
	    ingredients += "<ul>";
	    for (x in data[0].ingredients) {
	        ingredients += "<li>" + data[0].ingredients[x].quantity + data[0].ingredients[x].name;
	    }

	    // Show data - Name and Image 
	    document.getElementById("recipeName").innerHTML = data[0].name;
	    loadedRecipe = data[0].name;
	    document.getElementById("recipeImg").src = data[0].imageURL;
	}
	
	</script>

    <div class = "bodyContent">
    <div class="row1">
	</div>
	</body>
</html>